@model MVCDemo.StuInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    
    <title>Delete</title>
</head>
<body>
    <div id="div1">
        <h2>Delete</h2>
        <div class="alert alert-warning">
            <a href="#" class="close" data-dismiss="alert">
                &times;
            </a>
            <strong>WARNING！</strong>Are you sure you want to delete this student?
        </div>
        <ul class="list-group">
            <li class="list-group-item">学生姓名:@Html.DisplayFor(model => model.SName)</li>
            <li class="list-group-item">班级ID:@Html.DisplayFor(model => model.ClassID)</li>
         </ul>
        @using (Html.BeginForm())
        {
            <div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Delete</button>
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "WebForm1")
        </div>
    </div>

</body>
</html>
